<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CaicedoRamos_Examen2P.Views.ConteoCaracteres"
             Title="Conteo de Caracteres"
             BackgroundColor="#5e5e5e">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="Conteo de Caracteres" FontSize="30" TextColor="White" Grid.Row="0" HorizontalOptions="CenterAndExpand"/>

        <Entry x:Name="InputEntry" Placeholder="Ingresa texto" TextColor="White" BackgroundColor="#8c8c8c" Grid.Row="1" Margin="20"/>
        <Button Text="Contar Caracteres" Clicked="CountButton_Clicked" BackgroundColor="#800020" TextColor="White" Grid.Row="2" Margin="20"/>

        <Label x:Name="ResultLabel" FontSize="16" TextColor="White" Grid.Row="3" Margin="20"/>
    </Grid>

</ContentPage>
